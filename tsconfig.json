{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",         
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./llm_mcp_proxy",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "llm_mcp_proxy/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}